<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
<title>{{site.author}}</title>
<updated>{{site.time | date_to_xmlschema}}</updated>
<id>{{site.url}}/</id>
<link href="{{site.url}}/"/>
<link href="{{site.url}}/feed/" rel="self"/>
<author>
	<name>{{site.author}}</name>
	<uri>{{site.url}}</uri>
</author>
{% for post in site.posts %}<entry>
	<title>{{post.title | remove: "<span>&shy;</span>" | xml_escape}}</title>
	<published>{{post.date | date_to_xmlschema}}</published>
	<updated>{% unless post.updated == nil %}{{post.updated | date_to_xmlschema}}{% else %}{{post.date | date_to_xmlschema}}{% endif %}</updated>
	<id>{{site.url}}{{post.id}}</id>
	<link href="{{site.url}}{{post.url}}"/>
	<author>
		<name>{{site.author}}</name>
		<uri>{{site.url}}</uri>
	</author>
	<content type="html">{{post.description | xml_escape}}</content>
</entry>{% endfor %}
</feed>